<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vol"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/viotv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/veditText1"
        android:layout_toLeftOf="@+id/veditText3"
        android:layout_toStartOf="@+id/veditText3"
        android:text="标题："
        android:textSize="20sp" />

    <com.cengalabs.flatui.views.FlatEditText
        android:id="@+id/veditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/viotv1"
        flatui:fl_fieldStyle="fl_box"
        flatui:fl_theme="@array/orange" />

    <TextView
        android:id="@+id/viotv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/veditText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="负责人："
        android:textSize="20sp" />

    <com.cengalabs.flatui.views.FlatEditText
        android:id="@+id/veditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veditText1"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/viotv2"
        android:layout_toRightOf="@+id/viotv2"
        flatui:fl_fieldStyle="fl_box"
        flatui:fl_theme="@array/orange" />

    <TextView
        android:id="@+id/viotv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/veditText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="组员："
        android:textSize="20sp" />

    <com.cengalabs.flatui.views.FlatEditText
        android:id="@+id/veditText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veditText2"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/viotv3"
        android:layout_toRightOf="@+id/viotv3"
        flatui:fl_fieldStyle="fl_box"
        flatui:fl_theme="@array/orange" />

    <TextView
        android:id="@+id/viotv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/veditText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="日期："
        android:textSize="20sp" />

    <com.cengalabs.flatui.views.FlatEditText
        android:id="@+id/veditText4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veditText3"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/viotv4"
        android:layout_toRightOf="@id/viotv4"
        flatui:fl_fieldStyle="fl_box"
        flatui:fl_theme="@array/orange" />

    <Button
        android:id="@+id/voltimesel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/viotv4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="选择时间" />

    <TextView
        android:id="@+id/viotv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/veditText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="电话："
        android:textSize="20sp" />

    <com.cengalabs.flatui.views.FlatEditText
        android:id="@+id/veditText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veditText4"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/viotv5"
        android:layout_toRightOf="@id/viotv5"
        flatui:fl_fieldStyle="fl_box"
        flatui:fl_theme="@array/orange" />

    <ImageView
        android:id="@+id/volpicImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/veditText5"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/viotv6"
        android:src="@drawable/ic_add_pic" />

    <TextView
        android:id="@+id/viotv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/volpicImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/volpicImg"
        android:text="志愿者图片："
        android:textSize="20sp" />

    <Button
        android:id="@+id/volsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volpicImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="申请" />

</RelativeLayout>