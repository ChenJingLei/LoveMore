<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cjl.LoginActivity">
    <!--android:background="@drawable/login_background"-->

    <RelativeLayout
        android:id="@+id/logRL1"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/dog"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="爱多多"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logRL2"
        android:layout_centerInParent="true"
        android:layout_below="@id/logRL1"
        android:layout_width="270dp"
        android:layout_height="93dp"
        android:background="@drawable/edittext_bg">

        <LinearLayout
            android:id="@+id/logLL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:layout_marginBottom="4dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="密码"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logLL1"
            android:layout_toEndOf="@+id/logLL1">

            <EditText
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_below="@id/logRL1"
                android:text=""
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:singleLine="true" />

            <EditText
                android:id="@+id/pwdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/nameText"
                android:background="@null"
                android:text=""
                android:textColor="#000000"
                android:singleLine="true" />

            </LinearLayout>

    </RelativeLayout>

    <CheckBox
        android:layout_marginLeft="30dp"
        android:id="@+id/remberCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logRL2"
        android:layout_marginTop="10dp"
        android:button="@drawable/checkbox_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logRL2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/remberCB"
        android:text="记住密码"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/logRL2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="忘记密码"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remberCB"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_btn_bg" />

    <TextView
        android:id="@+id/register"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#6699ff"
        android:text="新用户请注册" />

</RelativeLayout>
