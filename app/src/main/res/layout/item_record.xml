<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <com.app.cjl20.lovemore.views.CircleImg
        android:id="@+id/rdavatarImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icno_user" />

    <TextView
        android:id="@+id/rdname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rdavatarImg"
        android:layout_margin="15dp"
        android:layout_toEndOf="@+id/rdavatarImg"
        android:layout_toRightOf="@+id/rdavatarImg"
        android:text="@string/app_name"
        android:textColor="#28f808"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rdavatarImg"
        android:orientation="horizontal"

        android:padding="10dp">

        <TextView
            android:id="@+id/rdcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/rdimg"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:src="@drawable/unknown" />

    </LinearLayout>


</RelativeLayout>